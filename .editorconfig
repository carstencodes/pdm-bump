# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 79
ensure_newline_before_comments = true
include_trailing_comma = true
use_parentheses = true

[*.yml]
indent_size = 2
